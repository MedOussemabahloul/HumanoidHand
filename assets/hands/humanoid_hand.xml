<mujoco model="humanoid_hand">
  <asset>
    <texture name="skin_tex" type="2d" file="../textures/skin.png"/>
    <material name="skin_mat" texture="skin_tex" specular="0.1"/>
  </asset>
  <worldbody>
    <body name="palm" pos="0 0 0">
      <geom name="palm_geom" type="sphere" size="0.05" rgba="0.9 0.7 0.5 1" material="skin_mat"/>

      <body name="finger1" pos="0.03 0 0">
        <joint name="finger1_joint" type="hinge" axis="0 1 0" range="-2.0 2.0" damping="1"/>
        <geom type="capsule" fromto="0 0 0 0.10 0 0" size="0.03" material="skin_mat"/>
      </body>
      <body name="finger2" pos="0.015 0.026 0">
        <joint name="finger2_joint" type="hinge" axis="0 1 0" range="-2.0 2.0" damping="1"/>
        <geom type="capsule" fromto="0 0 0 0.10 0 0" size="0.03" material="skin_mat"/>
      </body>
      <body name="finger3" pos="-0.015 0.026 0">
        <joint name="finger3_joint" type="hinge" axis="0 1 0" range="-2.0 2.0" damping="1"/>
        <geom type="capsule" fromto="0 0 0 0.10 0 0" size="0.03" material="skin_mat"/>
      </body>
      <body name="finger4" pos="-0.03 0 0">
        <joint name="finger4_joint" type="hinge" axis="0 1 0" range="-2.0 2.0" damping="1"/>
        <geom type="capsule" fromto="0 0 0 0.10 0 0" size="0.03" material="skin_mat"/>
      </body>
      <body name="finger5" pos="-0.015 -0.026 0">
        <joint name="finger5_joint" type="hinge" axis="0 1 0" range="-2.0 2.0" damping="1"/>
        <geom type="capsule" fromto="0 0 0 0.10 0 0" size="0.03" material="skin_mat"/>
      </body>
    </body>
  </worldbody>
  <actuator>
    <motor name="m1" joint="finger1_joint" gear="50" ctrlrange="-1 1"/>
    <motor name="m2" joint="finger2_joint" gear="50" ctrlrange="-1 1"/>
    <motor name="m3" joint="finger3_joint" gear="50" ctrlrange="-1 1"/>
    <motor name="m4" joint="finger4_joint" gear="50" ctrlrange="-1 1"/>
    <motor name="m5" joint="finger5_joint" gear="50" ctrlrange="-1 1"/>
  </actuator>
</mujoco>
